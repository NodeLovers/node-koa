<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <% include ../common/header.ejs %>
</head>
<body>
<h1><%= title %></h1>
<a href="/users/new" class="btn btn-success">添加用户</a>
<table id="users" class="table table-bordered table-hover">
    <thead>
    <tr>
        <td align="center">邮箱</td>
        <td align="center">昵称</td>
        <td align="center">地址</td>
        <td align="center">电话</td>
        <td align="center">性别</td>
        <td align="center">图像</td>
        <td align="center">创建时间</td>
        <td align="center">上次登录</td>
        <td colspan="2" align="center">操作</td>
    </tr>
    </thead>
    <% if (users.length) { %>
    <tbody>
    <% users.forEach(function(user){ %>
    <tr>
        <td align="center"><%= user.email %></td>
        <td align="center"><%= user.nickname %></td>
        <td align="center"><%= user.address %></td>
        <td align="center"><%= user.phone %></td>

        <% if (user.gender ==0) { %>
            <td align="center">未知</td>
        <% } %>
        <% if (user.gender == 1) { %>
            <td align="center">男</td>
        <% } %>
        <% if (user.gender == 2) { %>
            <td align="center">女</td>
        <% } %>
        <td align="center"><img src="<%= user.imgUrl %>" alt="" style="width: 30px" height="30px"></td>
        <td align="center"><%= user.createTime %></td>
        <td align="center"><%= user.lastLogin %></td>
        <td align="center"><a href="/users/edit/<%= user._id %>" class="btn btn-info">修改</a></td>
        <td align="center"><a href="/users/delete/<%= user._id %>" class="btn btn-danger">删除</a></td>
    </tr>
    <% }) %>
    </tbody>
    <% } %>
</table>
</body>
</html>
